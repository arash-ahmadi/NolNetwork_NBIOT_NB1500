  if (notify_serial)
  {

    // print the results to the Serial Monitor:
    Serial.print(sensor_high);
    Serial.print("\t");
    Serial.print(sensor_rising);
    Serial.print("\t");
    Serial.print(state);
    Serial.print("\t");
    Serial.print(counter);
    Serial.print("\t");
    Serial.println(sensorValue);
